# Environment configurations for Aether Mailer
# Production environment - optimized for performance and security

NODE_ENV=production
LOG_LEVEL=warn
SSH_ENABLE_LOCAL_AUTH=false
SSH_AUTH_SERVICE_URL=https://auth.skygenesisenterprise.com/api/v1/auth/ssh
SSH_PORT=2222
DATABASE_PROVIDER=postgresql
POSTGRES_DB=aether_mailer
POSTGRES_USER=mailer
POSTGRES_PASSWORD=CHANGE_ME_IN_PRODUCTION
SERVER_PORT=8080
FRONTEND_PORT=3000

# CORS settings for production
CORS_ORIGIN=https://aether-mailer.skygenesisenterprise.com

# Production services
REDIS_ENABLED=true
REDIS_URL=redis://prod-redis:6379
MONITORING_ENABLED=true

# Security settings
ENABLE_RATE_LIMITING=true
ENABLE_SECURITY_HEADERS=true
ENABLE_HTTPS_ONLY=true
SSL_CERT_PATH=/etc/ssl/certs/aether-mailer.crt
SSL_KEY_PATH=/etc/ssl/private/aether-mailer.key

# Performance optimizations
ENABLE_CACHING=true
ENABLE_COMPRESSION=true
WORKER_PROCESSES=auto

# External services
EXTERNAL_AUTH_ENABLED=true
EXTERNAL_MONITORING_ENABLED=true
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"