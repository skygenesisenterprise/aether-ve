# Environment configurations for Aether Mailer
# Staging environment - pre-production testing

NODE_ENV=staging
LOG_LEVEL=info
SSH_ENABLE_LOCAL_AUTH=false
SSH_AUTH_SERVICE_URL=https://auth-service.staging.skygenesisenterprise.com/api/v1/auth/ssh
SSH_PORT=2222
DATABASE_PROVIDER=postgresql
POSTGRES_DB=aether_mailer_staging
POSTGRES_USER=mailer_staging
POSTGRES_PASSWORD=STAGING_DB_PASSWORD_CHANGE_ME
SERVER_PORT=8080
FRONTEND_PORT=3000

# CORS settings for staging
CORS_ORIGIN=https://staging.aether-mailer.skygenesisenterprise.com

# Staging services
REDIS_ENABLED=true
REDIS_URL=redis://staging-redis:6379
MONITORING_ENABLED=true

# Security settings
ENABLE_RATE_LIMITING=true
ENABLE_SECURITY_HEADERS=true

# External services
EXTERNAL_AUTH_ENABLED=true
EXTERNAL_MONITORING_ENABLED=true