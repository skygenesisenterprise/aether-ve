# Environment configurations for Aether Mailer
# Development, staging, and production environment variables

# Development environment
NODE_ENV=development
LOG_LEVEL=debug
SSH_ENABLE_LOCAL_AUTH=true
SSH_PORT=2222
DATABASE_PROVIDER=postgresql
POSTGRES_DB=aether_mailer_dev
POSTGRES_USER=mailer_dev
POSTGRES_PASSWORD=mailer_dev_password
SERVER_PORT=8080
FRONTEND_PORT=3000

# CORS settings for development
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Development services
REDIS_ENABLED=false
MONITORING_ENABLED=false

# Development specific
DEBUG_MODE=true
HOT_RELOAD=true